<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <title>Home</title>
    <link rel="stylesheet" href="../css/style.css">
    <link rel="icon" href="../favicon.ico">
</head>

<body>
    <div class="grid-item header-grid-item">
        <%- include('view/header'); -%>
    </div>
    <div class="grid-container-account">


        <div class="grid-item account-grid-item">
            <div>
                <h2>
                    <%=email %>
                </h2>
                <p>
                    <%=balance %>
                </p>
                <table class="accountTable">
                    <tr>
                        <td class="accountHead" colspan="6"> <b>Bets</b></td>
                    </tr>

                    <%
                    for(var i = 0; i < matchData.length; i++){
                    %>
                        <tr>
                            <td>
                                <%=matchData[i].team1name; %>
                            </td>
                            <td>
                                <%=matchData[i].team1odds %>
                            </td>
                            <td>
                                <%=matchData[i].team2odds %>
                            </td>
                            <td>
                                <%=matchData[i].team2name %>
                            </td>
                            <td>
                                <label for="stake">Stake</label>
                                <input type="text" class="bet" value="0">
                            </td>
                            <td>
                                <select class="selectTeam">
                            <option class="selectedBet" value="team one">
                                <%=matchData[i].team1name; %>
                            </option>
                            <option class="selectedBet" value="lag2">
                                
                                <%=matchData[i].team2name; %>
                            </option>
                        </select>
                                <input type="button" name="<%= i %>" value="place" onclick="placeBet()"></input>
                                <button>delete</button>
                            </td>

                        </tr>
                        <%
                }
                    %>

                </table>


                <script>
                    function placeBet() {
                        var betTest = document.getElementsByClassName('bet');

                    }
                </script>

                <p id="demo">

                </p>


            </div>
        </div>
    </div>
    <div class="account-footer-wrap">
        <div class="grid-item footer-grid-item">
            <%- include('view/footer'); -%>
        </div>
    </div>


</body>